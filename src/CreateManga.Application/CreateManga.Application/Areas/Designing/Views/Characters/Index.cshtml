@model IEnumerable<GetAllCharactersViewModel>

@{
    ViewData["Title"] = "All characters";
}

<h1>Characters</h1>
<br />
<div>
    <a class="btn btn-outline-primary" asp-action="Create">Create Character</a> 
</div>
<br />
<table class="table text-white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (GetAllCharactersViewModel character in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => character.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Update", new { id = character.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = character.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = character.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
